{% form_theme searchTerm 'bootstrap_3_horizontal_layout.html.twig'  %}

<div class="widget_EditSearchTerm widgetBoxShadow">

    <div class="formBlock positionRelative" data-divForm="1">
        {{form_start(searchTerm)}}
        {{ form_widget(searchTerm)}}
        {{ form_end(searchTerm) }}
    </div>
    <!-- // Options END -->
</div>
{%if fetch_widget_EditSearchTerm is defined %}
    {{ fetch_widget_EditSearchTerm|raw  }}
{%endif%}
<div class="button-action">
    <a href="javascript:history.back()"> 
        <div class="btnGoBack" id="btnGoBack">
            <i class="fa fa-arrow-circle-o-left"></i>
        </div>
    </a>
    <div class="buttonDefault  buttonGreen" data-submit="1">
        <a>
            <div type="submit"  class="add">Salva Ricerca</div>
            <i class=" fa  fa-save"></i>
        </a>
    </div>

    <div class="buttonDefault buttonRed" data-reset="1">
        <a>
            <div type="submit"  class="add"> Reset Ricerca</div>
            <i class=" fa   fa-eraser"></i>
        </a>
    </div>
    <div class="buttonDefault" onclick="window.location.href = '{{ path('listSearchTerms') }}';">
        <div class="add"> Lista Ricerche</div>
        <i class=" fa    fa-arrow-circle-left"></i>
    </div>
    <div id="toTop">
        <i class="fa fa-arrow-circle-o-left"></i>
    </div>

</div>
