{% form_theme subcategory 'bootstrap_3_horizontal_layout.html.twig'  %}

<div class="widget_EditSubcategory widgetBoxShadow">
    {%if image is not null and image is not empty %}
        <div class="pull-left imgAssociation">
            <div>Immagine associata a questa categoria</div>
            <img src="{{folder_img_subcategories}}/{{image.img}}">
        </div>
        <div class="separator bottom" style="clear:both;"></div>
    {%endif%}

<div class="formBlock positionRelative" data-divForm="1">
    {{form_start(subcategory)}}
    {{ form_widget(subcategory)}}

        <div>
            <div class="pull-left">
                <div><b>Colore Sfondo</b></div>
                <div class="colorpicker2 pull-left"></div>
            </div>


            <div class="pull-left">
                <div><b>Colore Testo</b></div>
                <div class="colorpicker1 pull-left"></div>
            </div>
        </div>
        {{ form_end(subcategory) }}
    </div>

    <!-- // Options END -->
    {%if fetch_widget_EditSubcategory is defined %}
        {{ fetch_widget_EditSubcategory|raw  }}
    {%endif%}
</div>
<div class="button-action">
    <a href="javascript:history.back()"> 
        <div class="btnGoBack" id="btnGoBack">
            <i class="fa fa-arrow-circle-o-left"></i>
        </div>
    </a>
    <div class="buttonDefault  buttonGreen" data-submit="1">
        <a>
            <div type="submit"  class="add">Salva Sottocategoria</div>
            <i class=" fa  fa-save"></i>
        </a>
    </div>
    <div class="buttonDefault buttonRed" data-reset="1">
        <a>
            <div type="submit"  class="add"> Reset Sottocategoria</div>
            <i class=" fa   fa-eraser"></i>
        </a>
    </div>
    <div class="buttonDefault" onclick="window.location.href = '{{ path('manageSubcategories') }}';">
        <div class="add"> Lista Sottocategorie</div>
        <i class=" fa    fa-arrow-circle-left"></i>
    </div>
    <div id="toTop">
        <i class="fa fa-arrow-circle-o-left"></i>
    </div>
</div>
