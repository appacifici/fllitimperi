{% form_theme product 'bootstrap_3_horizontal_layout.html.twig'  %}

<div class="widget_EditProduct widgetBoxShadow" style="margin: 25px ">
    <div data-urlProduct="ebay"> 
        <input type="text" name="ebayUrl" placeholder="Ebay" style="border-bottom: 1px solid #ccc; width: 80%">
        <button data-BtnProduct>Cerca</button>
    </div>
    <div data-urlProduct="amazon"> 
        <input type="text" name="amazonUrl" placeholder="Amazon" style="border-bottom: 1px solid #ccc; width: 80%"><br>
        <button data-BtnProduct>Cerca</button>
    </div>
</div>
<div class="widget_EditProduct widgetBoxShadow">

    <div class="formBlock positionRelative" data-divForm="1">
        {{form_start(product)}}
        {{ form_widget(product)}}
        {{ form_end(product) }}
    </div>
    <!-- // Options END -->
</div>
{%if fetch_widget_EditProduct is defined %}
    {{ fetch_widget_EditProduct|raw  }}
{%endif%}
<div class="button-action">
    <a href="javascript:history.back()"> 
        <div class="btnGoBack" id="btnGoBack">
            <i class="fa fa-arrow-circle-o-left"></i>
        </div>
    </a>
    <div class="buttonDefault  buttonGreen" data-submit="1">
        <a>
            <div type="submit"  class="add">Salva Prodotto</div>
            <i class=" fa  fa-save"></i>
        </a>
    </div>

    <div class="buttonDefault buttonRed" data-reset="1">
        <a>
            <div type="submit"  class="add"> Reset Prodotto</div>
            <i class=" fa   fa-eraser"></i>
        </a>
    </div>
    <div class="buttonDefault" onclick="window.location.href = '{{ path('listProductsAdmin') }}';">
        <div class="add"> Lista Prodotti</div>
        <i class=" fa    fa-arrow-circle-left"></i>
    </div>
    <div id="toTop">
        <i class="fa fa-arrow-circle-o-left"></i>
    </div>

</div>
