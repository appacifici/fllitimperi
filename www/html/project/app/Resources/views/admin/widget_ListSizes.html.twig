{% if permission.trademark.read %}
    <div class="widget_ListSizes widgetBoxShadow" >
        <table class="table footable">
            <thead>
                <tr> 
                    <th class="center" data-hide="phone">Id</th>
                    <th data-class="expand">Taglie</th>
                    <th data-class="expand">Sinonimi</th>
                    <th data-hide="phone">Azioni</th>
                </tr>
            </thead>
            <tbody>
                {% for size in sizes %}
                    {% if size is defined %}
                        <tr class="selectable">
                            <td class="important center" ><span class="badge badge-blu">{{size.id}}</span></td>
                            <td class="important" data-modify="input" data-field="screen">{{size.name}}</td>
                            <td class="important" data-modify="input" data-field="screen">{{size.synonyms}}</td>
                            <td class="">           
                                <a href="{{ path('editSize', {'id': size.id}) }}" class="btn btn-green"><i class="fa fa-pencil"></i></a>
                                <button class="btn btn-sm btn-danger" data-deleteInlineForm="1">
                                    <i class="fa fa-trash-o"></i>
                                </button>
                            </td>  
                        </tr>
                    {%endif%}
                {%endfor%}
            </tbody>
        </table>
    </div>
{% endif %}
{%if fetch_widget_ListSize is defined %}
    {{ fetch_widget_ListSize|raw  }}
{%endif%}
<div class="button-action">
    <a href="javascript:history.back()"> 
        <div class="btnGoBack" id="btnGoBack">
            <i class="fa fa-arrow-circle-o-left"></i>
        </div>
    </a>
    <div class="buttonDefault" onclick="window.location.href = '{{ path('editSize') }}';">
        <div class="add">Crea nuovo Taglia</div>
        <i class=" fa  fa-plus-circle"></i>
    </div>
    <div id="toTop">
        <i class="fa fa-arrow-circle-o-left"></i>
    </div>
</div>
