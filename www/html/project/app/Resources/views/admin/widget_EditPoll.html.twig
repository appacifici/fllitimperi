<div class="widget_EditPoll ">
    <div class="formBlock" data-divForm="1">
        <form id="form" class="form-horizontal widgetBoxShadow positionRelative">
            <div>
                {% if data is not empty %}
                    <div class="form-group  ">
                        <label class="control-label">ID Articolo</label>
                        <input type="text" class="form-control" id="dataArticle" value="{{data.dataArticleId}}">
                        <div class="clearB"></div>
                    </div>
                    <div class="form-group  ">
                        <label class="control-label">Domanda</label>
                        <input type="text" data-field="question" class="question form-control"  value="{{data.question}}">

                        <div class="clearB"></div>
                    </div>
                    {% for answer in answers%}
                        <div class="form-group  ">
                            <label class="control-label">Risposta</label>
                            <input type="text" class="answer form-control" value="{{answer.answer}}">
                            <div class="clearB"></div>
                        </div>
                    {% endfor %}
                    <div class="form-group  ">
                        <div class="col-sm-2"></div>
                        <div class="col-sm-2 pull-right">
                            <button type="button" id="form_add" name="form[add]" class="pull-right btn-add btn">Aggiungi Risposta</button>
                        </div>
                        <div class="clearB"></div>
                    </div>
                {% else %}
                    <div class="form-group  ">
                        <label class="control-label">ID Articolo</label>
                        <input type="text" id="dataArticle" class=" form-control" value="">
                        <div class="clearB"></div>
                    </div>
                    <div class="form-group  ">
                        <label class="control-label">Domanda</label>
                        <input type="text" class="question form-control">
                        <div class="clearB"></div>
                    </div>

                    {% for i in 0..10 %}
                        <div class="form-group  ">                     
                            <label class="control-label">Risposta</label>
                            <input type="text" class="answer form-control" >

                            <div class="clearB"></div>
                        </div>
                    {% endfor %}

                {% endif %} 

            </div>
        </form>
    </div>

    {%if fetch_widget_EditPoll is defined %}
        {{ fetch_widget_EditPoll|raw  }}
    {%endif%}
</div>
<div class="button-action">
    <a href="javascript:history.back()"> 
        <div class="btnGoBack" id="btnGoBack">
            <i class="fa fa-arrow-circle-o-left"></i>
        </div>
    </a>
    <div class="buttonDefault buttonGreen" data-submitPoll="1">
        <a>
            <div id="form_save" name="form[save]" class="add"> Salva  Sondaggio</div>
            <i class=" fa  fa-save"></i>
        </a>
    </div>
    <div id="toTop">
        <i class="fa fa-arrow-circle-o-left"></i>
    </div>
</div>
