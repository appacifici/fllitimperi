    <!-- Products table -->
    <table class="table footable table-bordered table-condensed table-striped table-primary colVis table">
        <thead>
            <tr>
                 <th class="center" data-hide="phone">Id</th>
                <th data-class="expand">Nome</th>
                <th data-class="expand">Cognome</th>
                <th data-hide="phone,tablet">Username</th>
                <th data-hide="phone,tablet">Email</th>
