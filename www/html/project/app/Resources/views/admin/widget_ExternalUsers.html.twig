                    #}                    <th data-hide="phone">Azioni</th>
            </tr>
        </thead>
        <tbody>
            {%for user in users %}
                <tr class="selectable" data-createForm="modifyUser" data-id="{{user.id}}" data-entity="User">
                    <td class="important center"><span class="badge badge-blu">{{user.id}}</span></td>
                    <td class="important" data-modify="input"  data-field="name" data-user="{{user.id}}">{{user.name}}</td>
                    <td class="important" data-modify="input" data-field="surname"> {{user.surname}}</td>
                    <td class="important" data-modify="input" data-field="username">{{user.username}}</td>
                    <td class="important">{{user.email}}</td>
                    <td>
                        <a href="{{ path('editExternalUser', {'id': user.id}) }}" class="btn btn-green"><i class="fa fa-pencil"></i></a>                        
                        <button class="btn btn-red" data-deleteInlineForm="1">
                            <i class="fa fa-trash-o"></i>
                        </button>
                    </td>  
                </tr>
            {%endfor%}
        </tbody>
    </table>
